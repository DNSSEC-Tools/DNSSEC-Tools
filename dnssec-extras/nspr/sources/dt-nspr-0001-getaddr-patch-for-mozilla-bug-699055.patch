     ai = PR_NEW(PRAddrInfoFB);
     if (!ai) {
@@ -1973,7 +2024,7 @@ pr_GetAddrInfoByNameFB(const char  *hostname,
 
     return (PRAddrInfo *) ai;
 }
-#endif /* !_PR_HAVE_GETADDRINFO || _PR_INET6_PROBE */
