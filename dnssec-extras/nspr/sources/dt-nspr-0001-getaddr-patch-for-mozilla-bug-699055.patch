@@ -2081,8 +2127,9 @@ PR_IMPLEMENT(void *) PR_EnumerateAddrInfo(void             *iterPtr,
 {
 #if defined(_PR_HAVE_GETADDRINFO)
     PRADDRINFO *ai;
-#if defined(_PR_INET6_PROBE)
