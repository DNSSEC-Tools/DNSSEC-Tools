CC	   = gcc
INSTALL    = @INSTALL@
AR         = @AR@
RANLIB     = @RANLIB@
ARFLAGS	   = cruv
OBJS	   = validat.o

all: libvalidat.so libvalidat.a

libvalidat.so: $(OBJS)
	$(CC) -shared -o $@ $(OBJS)

libvalidat.a: $(OBJS)
	$(AR) $(ARFLAGS) $@ $(OBJS)
	$(RANLIB) $@

validat.o: validat.c validat.h
	$(CC) -c validat.c

install:
	$(INSTALL) libvalidat.so $(libdir)
	$(INSTALL) libvalidat.a  $(libdir)

clean:
	\rm -rf *.o *.so *.a
