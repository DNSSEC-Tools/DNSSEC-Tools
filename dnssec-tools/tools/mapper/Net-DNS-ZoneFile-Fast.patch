+sub parse_dnskey
+{
+    # got more data
+    if (/\)\s*;.*$/) {
+	if (/\G\s*(\S*)\s*\)\s*;.*$/gc) {
+	    $dnskey->{'key'} .= $1;
+	    # we're done
+	    $parse = \&parse_line;
+
+	    $dnskey->{'keybin'} = decode_base64($dnskey->{'key'});
+	    push @zone, $dnskey;
+	    $dnskey = undef;
+	} else {
+	    error("bad dnskey last line");
+	}
+    } else {
+	if (/\G\s*(\S+)\s*$/gc) {
+	    $dnskey->{'key'} .= $1;
+	} else {
+	    error("bad dnskey remaining lines");
+	}
+    }
+}
